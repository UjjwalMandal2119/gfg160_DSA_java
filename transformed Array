class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int l=nums.length;
        int[] result=new int[l];
       for(int i=0; i<nums.length; i++){
        if(nums[i]>0){
           result[i]=nums[(i + nums[i]) % l];
        }
        if(nums[i]<0){
            
            result[i]=nums[ ((i + nums[i]) % l + l) % l];
        }
        if(nums[i]==0){
            result[i]=nums[i];
        }
       } 
       return result;
    }
}
